---
// Este componente podr√≠a ser para reutilizar iconos sociales en otros lugares
import Instagram from "../icons/Instagram.astro";
import Facebook from "../icons/Facebook.astro";
import YouTube from "../icons/YouTube.astro";

const socialLinks = [
  {
    icon: Instagram,
    url: "https://www.instagram.com/delejuventud/",
    size: "26px",
    color: "#FFFFFF",
  },
  {
    icon: Facebook,
    url: "https://www.facebook.com/delejuventud",
    size: "26px",
    color: "#FFFFFF",
  },
  {
    icon: YouTube,
    url: "https://www.youtube.com/@CORDOBAESPERA",
    size: "32px",
    color: "#FFFFFF",
  },
];
---

<div class="social-icons">
  {socialLinks.map(link => {
    const IconComponent = link.icon;
    return (
      <IconComponent url={link.url} size={link.size} color={link.color} />
    );
  })}
</div>
