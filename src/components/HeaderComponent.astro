---
// Header.astro
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header class="header">
  <button
    class="back-button"
    aria-label="Go back"
    onclick="window.history.back()"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path d="M15 18l-6-6 6-6"></path>
    </svg>
  </button>
  <h1 class="header-title">{title}</h1>
  <button class="calendar-button" aria-label="Open calendar" id="menu-button">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
      <line x1="16" y1="2" x2="16" y2="6"></line>
      <line x1="8" y1="2" x2="8" y2="6"></line>
      <line x1="3" y1="10" x2="21" y2="10"></line>
    </svg>
  </button>
</header>

<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background-color: white;
    width: 100%;
    position: fixed;
    z-index: 1000;
    height: 64px;
  }

  .back-button,
  .calendar-button {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .header-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin: 0;
  }

  svg {
    width: 24px;
    height: 24px;
  }
</style>
