---
// TabBar.astro
const tabs = [
  { name: 'Lecturas', icon: 'ğŸ“š' },
  { name: 'Cantos', icon: 'ğŸµ' },
  { name: 'Oraciones', icon: 'ğŸ™' }
];

const { activeTab = 'Lecturas' } = Astro.props;
---

<div class="tab-container">
  <div class="tab-content">
    {activeTab === 'Lecturas' && <h2>Contenido de Lecturas</h2>}
    {activeTab === 'Cantos' && <h2>Contenido de Cantos</h2>}
    {activeTab === 'Oraciones' && <h2>Contenido de Oraciones</h2>}
  </div>
  <nav class="tabbar">
    {tabs.map((tab) => (
      <a
        href={`/${tab.name.toLowerCase()}`}
        class={`tab-item ${activeTab === tab.name ? 'active' : ''}`}
      >
        <span class="tab-icon">{tab.icon}</span>
        <span class="tab-name">{tab.name}</span>
      </a>
    ))}
  </nav>
</div>

<style>
  .tab-container {
    display: flex;
    flex-direction: column;
    height: 100vh;
  }

  .tab-content {
    flex-grow: 1;
    padding: 20px;
  }

  .tabbar {
    display: flex;
    justify-content: space-around;
    background-color: #f0f0f0;
    padding: 10px 0;
  }

  .tab-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: #333;
  }

  .tab-item.active {
    color: #007bff;
  }

  .tab-icon {
    font-size: 24px;
  }

  .tab-name {
    font-size: 12px;
    margin-top: 5px;
  }
</style>