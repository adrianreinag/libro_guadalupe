    imagen: "/assets/ubicaciones/autobuses.png",
  }
];
---

<BaseLayout title="Ubicaciones">
  <HeaderComponent title="Ubicaciones" />
  <BodyLayout>
    <h2 class="titulo-seccion">Alía</h2>
    <div class="ubicaciones-container">
      <div class="ubicaciones-grid">
        {alia.map((ubi, index) => <UbicacionComponent ubi={ubi} />)}
      </div>
    </div>
    <h2 class="titulo-seccion">Guadalupe</h2>
    <div class="ubicaciones-container">
      <div class="ubicaciones-grid">
        {guadalupe.map((ubi, index) => <UbicacionComponent ubi={ubi} />)}
      </div>
    </div>
  </BodyLayout>
</BaseLayout>

<style>
  .ubicaciones-container {
    width: 100%;
    margin-top: 20px;
  }
  
  .ubicaciones-title {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
    text-align: center; /* Centra el texto */
  }
  
  .ubicaciones-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }
</style>
