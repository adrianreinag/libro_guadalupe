  },
  {
    nombre: "Pabellón",
    url: "https://maps.app.goo.gl/6BZA9HzgdQEgKqY66",
    imagen: "/assets/ubicaciones/pabellon-alia.png",
  },
  {
    nombre: "Casa de la Cultura",
    url: "https://maps.app.goo.gl/ZbEPBqGKoWSmuXnA9",
    imagen: "/assets/ubicaciones/casa-cultura.png",
  },
  {
    nombre: "Teleclub",
    url: "https://maps.app.goo.gl/5vegPeAvtMkorAj1A",
    imagen: "/assets/ubicaciones/teleclub.jpeg",
  },
  {
    nombre: "Gimnasio",
    url: "https://maps.app.goo.gl/9G7VFhssLfYqj4nj7",
    imagen: "/assets/ubicaciones/gimnasio-alia.png",
  }
];


const guadalupe = [
  {
    nombre: "Monasterio",
    url: "https://maps.app.goo.gl/tMPLkBDvs4dudLMy9",
    imagen: "/assets/ubicaciones/monasterio.jpg",
  },
  {
    nombre: "Pabellón",
    url: "https://maps.app.goo.gl/1agCqXMM2Hc34LCn7",
    imagen: "/assets/ubicaciones/pabellon-guadalupe.png",
  },
  {
    nombre: "Auditorio",
    url: "https://maps.app.goo.gl/HUSMaTRn8vXMJtpr9",
    imagen: "/assets/ubicaciones/auditorio.png",
  },
  {
    nombre: "Colegio",
    url: "https://maps.app.goo.gl/Kdwcwd8eHPdgFXNf9",
